<Window x:Class="VehicleDatabase.Views.VehiclesDatabaseViews"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VehicleDatabase.Views"
        mc:Ignorable="d"
        Title="Vehicle Database" Height="560" Width="1000">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF3164a5" Offset="1"/>
            <GradientStop Color="#FF8AAED4" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <SolidColorBrush x:Key="MainTabColor" Color="#d4bbda"/>

        <SolidColorBrush x:Key="BorderBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#FFFF4500"/>
        <LinearGradientBrush x:Key="TabControlBackgroundBrush" EndPoint="0.5,0" StartPoint="0.5,1">
            <GradientStop Color="#FFa9cde7" Offset="0"/>
            <GradientStop Color="#FFe7f4fc" Offset="0.3"/>
            <GradientStop Color="#FFf2fafd" Offset="0.85"/>
            <GradientStop Color="#FFe4f6fa" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="TabItemPathBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF3164a5" Offset="0"/>
            <GradientStop Color="#FFe4f6fa" Offset="1"/>
        </LinearGradientBrush>

        <!-- TabControl style -->
        <Style x:Key="TabControlStyle" TargetType="{x:Type TabControl}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Canvas Grid.Row="0">

                            </Canvas>
                            <Border Grid.Row="1" BorderThickness="1,0,1,1" Panel.ZIndex="2"
                                BorderBrush="Black"
                                Background="{StaticResource TabControlBackgroundBrush}">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Panel.ZIndex="2" IsItemsHost="true"/>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabItem style -->
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Polygon Fill="{TemplateBinding Background}"  
                                     Points="0,35 20,2 180,2 200,35" 
                                     Stroke="{TemplateBinding BorderBrush}" 
                                     StrokeThickness="1"
                                     Margin="0,1,0,0"/>
                            <Border Name="Border" Margin="0,0,0,0"
                                BorderBrush="Transparent" BorderThickness="5">
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ContentSource="Header"
                                      RecognizesAccessKey="True">
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Poly2" TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Polygon Fill="{TemplateBinding Background}"  
                                     Points="0,35 20,2 180,2 200,35" 
                                     Stroke="{TemplateBinding BorderBrush}" 
                                     StrokeThickness="1"/>

                            <ContentPresenter
                                HorizontalAlignment="Center"
                                Margin="0,2,0,0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>

        <Style x:Key="ListBoxItem_VehicleList" TargetType="ListBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid Margin="0,2" Background="{StaticResource MainTabColor}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Image 
                                    Source="{Binding SelectedProduct.ImageFilePath}" 
                                    Stretch="Fill"  
                                    Width="80"  />
                            <StackPanel Orientation="Vertical" Grid.Column="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Height="30" Text=" Model: " />
                                    <TextBlock Height="30" FontWeight="Regular" Text="{Binding SelectedProduct.Model}" />
                                    <TextBlock Height="30" Text="  Year: " />
                                    <TextBlock Height="30" FontWeight="Regular" Text="{Binding SelectedProduct.Year}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Height="30" Text=" Brand: " />
                                    <TextBlock Height="30" FontWeight="Regular" Text="{Binding SelectedProduct.Brand}" />
                                    <TextBlock Height="30" Text="  Mileage: " />
                                    <TextBlock Height="30" FontWeight="Regular" Text="{Binding SelectedProduct.Mileage}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>   
            </Setter>            
        </Style>

        <Style  x:Key="ListBoxItem_MaintenanceList" TargetType="ListBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid Margin="0,2" Background="LightSalmon">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--This needs attention-->
                            <TextBlock Grid.Column="0" Text="{Binding SelectedProduct.maintenanceRecord[0].MaintenanceTitle}"/>
                            <TextBlock Grid.Column="1" Text="Mileage"/> 
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBlock_Master" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

        <Style x:Key="TextBox_Master" TargetType="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="2,0,0,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

